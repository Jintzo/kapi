#!/usr/bin/env node


// load module dependencies
var app = require('../app');
var debug = require('debug')('ioe-api:server');
var http = require('http');


// set correct port
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);


// create HTTP server
var server = http.createServer(app);


// listen on specified port
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


/**
 * port normalization function
 * @param  {Object} val specified port valid
 * @return {Object}     normalized port, false on error
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}


/**
 * HTTP server error handler
 * @param  {Object} error HTTP server error
 * @return {void}
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;


  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}


/**
 * HTTP listening event handler
 * @return {void}
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
